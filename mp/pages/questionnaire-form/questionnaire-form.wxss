
page{background:#ededed; padding-bottom:120rpx;}

.head_img{width:100%; line-height:0; font-size:0;}
.head_img .img{width:100%;}

.form_box{background:#fff; border-radius:20rpx; padding:10rpx 30rpx 0; margin:-70rpx 20rpx 0; position:relative; z-index: 9;}
.form_box .logo{width:50%; position:absolute; left:50%; top:200rpx; opacity: .08;}
.form_box .dl{padding:25rpx 0; border-bottom:2rpx solid #ededed;  overflow: hidden;}
.form_box .dl:last-child{border-bottom:none;}
.form_box .dt{height:40rpx; line-height:40rpx; color:#888888; font-size:28rpx; width:170rpx; float:left;}
.form_box .dd{overflow: hidden; display: block; }
.form_box .dd .txt{font-size:28rpx; color:#2d929a; line-height:40rpx;}
.form_box .dd .input{ line-height:40rpx; height:40rpx;  box-sizing: border-box;  font-size:28rpx;}
.form_box .dd .input.placeholder{color:#999;}

